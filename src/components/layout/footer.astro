---


import { footerLinks, siteConfig } from "@/config/site";
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";

type Props = {
  className?: string;
};

const { className } = Astro.props;
---

<footer class={cn("border-t", className)}>


  <div class="border-t py-4">
    <div class="container flex items-center justify-between">
      <!-- <span class="text-muted-foreground text-sm">
        Copyright &copy; 2024. All rights reserved.
      </span> -->
      <p class="text-left text-xs text-muted-foreground">
        Originally designed by{" "}
        <a
          href="https://mickasmt.com/"
          target="_blank"
          rel="noreferrer"
          class="font-medium underline underline-offset-3"
        >
          mickasmt
        </a>
        . Hosted on{" "}
        <a
          href="https://vercel.com"
          rel="noreferrer"
          class="font-medium underline underline-offset-3"
        >
          Vercel
        </a>.
      </p>

      <div class="flex items-center gap-3">
        <a
          href={siteConfig.links.kaggle}
          aria-label="Visit my Kaggle profile"
          rel="noreferrer"
          class="font-medium underline underline-offset-4"
        >
          <Icon name="kaggle" class="size-8" />
        </a>
        <a
          href={siteConfig.links.github}
          aria-label="Visit my Github profile"
          rel="noreferrer"
          class="font-medium underline underline-offset-4"
        >
          <Icon name="github" class="size-5" />
        </a>
        

      </div>
    </div>
  </div>
</footer>
